# Kalibr SDK Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - Kalibr Authentication
# =============================================================================

# Your Kalibr API key (required for sending traces)
KALIBR_API_KEY=your-kalibr-api-key

# =============================================================================
# KALIBR SDK SETTINGS
# =============================================================================

# Collector endpoint URL for sending trace data
KALIBR_COLLECTOR_URL=http://localhost:8001/api/ingest

# Tenant identifier for multi-tenant setups
KALIBR_TENANT_ID=default

# Optional: provisioning token for agent self-onboarding
# Create one at dashboard.kalibr.systems/settings
# Set this instead of KALIBR_API_KEY to auto-provision credentials via `kalibr init`
# KALIBR_PROVISIONING_TOKEN=prov_live_...

# Workflow identifier for grouping related traces
KALIBR_WORKFLOW_ID=default

# Service name for OpenTelemetry spans
KALIBR_SERVICE_NAME=kalibr-app

# Environment name (prod, staging, dev)
KALIBR_ENVIRONMENT=dev

# Enable/disable auto-instrumentation (true/false)
KALIBR_AUTO_INSTRUMENT=true

# Enable console span export for debugging (true/false)
KALIBR_CONSOLE_EXPORT=false

# Collector format preference (ndjson or json)
KALIBR_COLLECTOR_FORMAT=ndjson

# =============================================================================
# RUNTIME SETTINGS (for kalibr run command)
# =============================================================================

# Backend URL for runtime registration
KALIBR_BACKEND_URL=http://localhost:8001

# Runtime identifier (auto-generated if not set)
# KALIBR_RUNTIME_ID=

# Context token for trace propagation (auto-generated if not set)
# KALIBR_CONTEXT_TOKEN=

# =============================================================================
# OPTIONAL - Sandbox/VM Settings
# =============================================================================

# Sandbox/VM identifier
SANDBOX_ID=local_dev

# Runtime environment type
RUNTIME_ENV=local

# =============================================================================
# LLM PROVIDER API KEYS (for running examples)
# =============================================================================

# OpenAI API key
OPENAI_API_KEY=your-openai-api-key

# Anthropic API key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google AI API key
GOOGLE_API_KEY=your-google-api-key
